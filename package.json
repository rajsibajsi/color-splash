{
  "name": "@rajsibajsi/color-splash",
  "version": "1.0.1",
  "description": "A TypeScript library for creating color splash effects on images with real-time preview support. Preserve selected colors while converting others to grayscale, perfect for photo editing applications.",
  "main": "dist/index.js",
  "module": "dist/index.esm.js",
  "browser": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.esm.js",
      "require": "./dist/index.cjs.js",
      "browser": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist/**/*",
    "README.md",
    "LICENSE",
    "CHANGELOG.md"
  ],
  "scripts": {
    "build": "rollup -c",
    "build:watch": "rollup -c -w",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "type-check": "tsc --noEmit",
    "dev": "npm run build:watch",
    "clean": "rm -rf dist",
    "prebuild": "npm run clean",
    "prepublishOnly": "npm run build && npm run test && npm run type-check",
    "demo": "cd demo && node serve.js",
    "size-check": "npm run build && bundlesize"
  },
  "keywords": [
    "color-splash",
    "image-processing",
    "color-selection",
    "typescript",
    "canvas",
    "webgl",
    "photo-editing",
    "image-effects",
    "selective-color",
    "real-time",
    "preview",
    "hsv",
    "lab",
    "rgb",
    "grayscale",
    "color-matching",
    "performance-optimization"
  ],
  "author": {
    "name": "Luka Reisman",
    "email": "",
    "url": "https://github.com/rajsibajsi"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rajsibajsi/color-splash.git"
  },
  "bugs": {
    "url": "https://github.com/rajsibajsi/color-splash/issues"
  },
  "homepage": "https://github.com/rajsibajsi/color-splash#readme",
  "devDependencies": {
    "@rollup/plugin-commonjs": "^25.0.0",
    "@rollup/plugin-node-resolve": "^15.0.0",
    "@rollup/plugin-terser": "^0.4.0",
    "@rollup/plugin-typescript": "^11.0.0",
    "@types/jest": "^29.5.0",
    "@types/node": "^18.19.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "canvas": "^2.11.0",
    "eslint": "^8.0.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "jest": "^29.7.0",
    "jest-canvas-mock": "^2.5.0",
    "jest-environment-jsdom": "^29.7.0",
    "prettier": "^3.0.0",
    "rollup": "^4.0.0",
    "ts-jest": "^29.1.0",
    "tslib": "^2.8.1",
    "typescript": "^5.2.0"
  }
}
